#!/usr/bin/env bash

## Shell
#
alias l="ls"
alias ll="ls -l"
alias la="ls -a"
alias ..="cd .."
alias ...="cd ../.."
alias psg="ps aux | grep"
alias h="history"
alias reload="source ~/.profile"
alias os_version="lsb_release -d"
alias 64bit="getconf LONG_BIT"
alias reclear="reload && clear"
alias loadgithub="ssh-add ~/.ssh/gh_iw"

# Impedir que el PC se vaya a modo sleep por 4 horas
alias noteduermas="echo 'Mantendr√© el PC despierto por 4 horas. ctrl + c para cancelar.' && caffeinate -u -t 14400"

## Folder navigation
#
alias projects="cd ~/projects"
alias dotfiles="cd ~/projects/dotfiles"

## Git most common
#
alias gst="git status"
alias ga="git add"
alias gaA="git add -A"
alias gcm="git commit"
alias gcma="git commit -am"
alias gdf="git diff"

## Git Branching
#
alias gb="git branch"
alias gbd="git branch -d"
alias gcob="git checkout -b"
alias gco="git checkout"

## Git Remotes
#
alias gps="git push"
alias gpl="git pull"
alias gf="git fetch"
alias grso="git remote show origin"
alias gpruneorigin="git remote prune origin"

## Hub
#
alias hpr="hub pull-request -c"

## Git Log
#
alias glg="git log --graph"
alias glol="git log -n"
alias glone="git log --oneline"
alias glone5="git log -n 5 --oneline"

## Ruby on Rails
#
alias be="bundle exec"
alias bi="bundle install"
alias rdbm="bundle exec rails db:migrate"
alias rserv="bundle exec rails server"
alias rcon="bundle exec rails console"
alias pruebas="bundle exec rspec"

# Este necesita tener instalado fzf. Ver https://github.com/junegunn/fzf?tab=readme-ov-file#installation
#
# fzf -e (-e or --exact)
alias routes="bundle exec rails routes | fzf -e"

## AWS
#
alias s3ls="aws s3 ls"
alias s3cp="aws s3 cp"

## Other stuff
#
alias dap_server="ssh cashflow"
alias dap_node="ssh cashflow"
alias funciones="cat ~/projects/dotfiles/system/.functions"
alias fms="foreman start"
alias jese="bundle exec jekyll serve --livereload"
alias nud="nvm use default"

## Editores de Texto
#
alias sbl="subl ."
alias zd="zed ."
