#!/usr/bin/env bash

## Generate Dumps
#
alias alpha_edge_generate_dump="luna db create-dev-db --environment alpha --database edge"
alias alpha_marketplace_generate_dump="luna db create-dev-db --environment alpha --database marketplace"
alias alpha_grimoire_generate_dump="luna db create-dev-db --environment alpha --database grimoire"

## AWS
#
alias awsloginalpha="aws sso login --profile alpha"
alias awsloginomega="aws sso login --profile omega"

## Zellij
#
alias zetwopanes="zellij --layout two_panes"
alias zeluna="zellij --layout luna"
alias zedap="zellij --layout devaspros"

## Git Pull Requests
#
# Aliases para los PRs a Omega.
#
# Solo falta pasarle el mensaje entre comillas.
alias piar="hub pull-request -c -b omega -m"
alias draftpiar="hub pull-request -c -d -b omega -m"

## Acceder a los containers en Alpha
#
alias pae="alpha_edge_pod"
alias pam="alpha_marketplace_pod"
alias pag="alpha_grimoire_pod"
